<table id="users">
  <thead>
  <tr>
    <th>id</th>
    <th>name</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <th><%= user.id %></th>
      <th><%= user.name %></th>
      <th><%= user.email %></th>
