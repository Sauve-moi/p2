<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><img src=" <%= picture.picture_url %>" style="width: 200px; height: 200px"> </td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', '/pictures/new.' + @house.house_id.to_s %>
<%= link_to 'Back', '/houses/' + @house.house_id.to_s %>
