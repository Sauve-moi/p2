      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Id %>
    <%= form.number_field :Id %>
  </div>

  <div class="field">
    <%= form.label :Name %>
    <%= form.text_field :Name %>
  </div>

  <div class="field">
    <%= form.label :Webstie %>
    <%= form.url_field :Webstie %>
  </div>

  <div class="field">
    <%= form.label :Address %>
    <%= form.text_field :Address %>
  </div>

  <div class="field">
    <%= form.label :Size %>
    <%= form.select :Size, RealEstateCompany.sizes.keys %>
  </div>

  <div class="field">
    <%= form.label :Founded %>
    <%= form.select :Founded, 1900..2019%>
  </div>

  <div class="field">
    <%= form.label :Revenue %>
    <%= form.range_field :Revenue, in: 100..500 , step: '1'%>
  </div>

  <div class="field">
    <%= form.label :Synopsis %>
    <%= form.text_area :Synopsis %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
